drop table   Genre;
drop table   Review;
drop table   Already_Read;
drop table   Published_By;
drop table   Reading;
drop table   Book_Reader;
drop table   Publisher;
drop table   Authored_By;
drop table   Follow;
drop table   Author;
drop table   Contact_Number;
drop table   Reader;
drop table   Book;

create table Author
(
	Author_ID 	varchar(20),
	Name 		varchar(50),
	Profile_Picture_name 	text,
	Profile_Picture_img 	bytea,
	Description				text,
	primary key (Author_ID) 	
);

create table Reader
(
	Reader_ID	varchar(50),
	Name 		varchar(50),
	Date_Of_Birth			DATE,
	City 		varchar(50),
	Email 		varchar(320),
	Profile_Picture_name 	text,
	Profile_Picture_img 	bytea,
	Introduction 			text,
	Gender					varchar(10),
	Password 				varchar(320),
	primary key (Reader_ID)
);

create table Book
(
	Book_ID		varchar(50),
	Name 		varchar(50),
	Description 	text,
	Author 			varchar(320),
	Number_Of_Pages	int,
	Cover_Pic_name	text,
	Cover_Pic_img	bytea,
	primary key (Book_ID)
);

create table Publisher
(
	Publisher_ID	varchar(50),
	Name 			varchar(50),
	Location		varchar(320),
	primary key (Publisher_ID)
);

create table Contact_Number
(
	Reader_ID 		varchar(50),
	Contact_Number 	varchar(20),
	foreign key (Reader_ID) references Reader(Reader_ID) on delete cascade,
	primary key (Reader_ID, Contact_Number)
);

create table Authored_By
(
	Book_ID 		varchar(50),
	Author_ID  		varchar(20),
	foreign key (Book_ID) references Book(Book_ID) on delete cascade,
	foreign key (Author_ID) references Author(Author_ID) on delete cascade,
	primary key (Book_ID, Author_ID)
);

