drop table IF EXISTS Genre;
drop table IF EXISTS Book;
drop table IF EXISTS Review;
drop table IF EXISTS Already_Read;
drop table IF EXISTS Published_By;
drop table IF EXISTS Reading;
drop table IF EXISTS Book_Reader;
drop table IF EXISTS Publisher;
drop table IF EXISTS Authored_By;
drop table IF EXISTS Follow;
drop table IF EXISTS Reader;
drop table IF EXISTS Author;
drop table IF EXISTS Contact_Number;

create table Author
(
	Author_ID 	varchar(20),
	Name 		varchar(50),
	Profile_Picture_name 	text,
	Profile_Picture_img 	bytea,
	Description				text,
	primary key (Author_ID) 	
);

create table Reader
(
	Reader_ID	varchar(50),
	Name 		varchar(50),
	Date_Of_Birth			DATE,
	City 		varchar(50),
	Email 		varchar(320),
	Profile_Picture_name 	text,
	Profile_Picture_img 	bytea,
	Introduction 			text,
	Gender					varchar(10),
	Password 				varchar(320),
	primary key (Reader_ID)
);
